<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="27"
                android:orientation="horizontal"
                android:paddingRight="7dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/explosion_item_gas_icon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd" />
            </LinearLayout>

            <TextView
                android:id="@+id/explosion_item_gas_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="73"
                android:gravity="bottom"
                android:textColor="#3285ff"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="27" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="73"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/explosion_item_gas_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/explosion_item_gas_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/explosion_item_gas_value"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/explosion_item_gas_value"
                    android:textColor="#333333"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="27" />

            <TextView
                android:id="@+id/explosion_item_gas_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="73"
                android:textColor="#999999"
                android:textSize="6sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

</FrameLayout>